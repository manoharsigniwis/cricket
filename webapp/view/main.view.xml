											<!--			<Text text="kkr"/>-->
											<!--		</cells>-->
											<!--	</ColumnListItem>-->
											<!--</items>-->
										</Table>
									</content>
									<footer>
										<OverflowToolbar>
											<ToolbarSpacer/>
											<Button type="Accept" text="Accept"/>
										</OverflowToolbar>
									</footer>
								</Page>
							</detailPages>
							<masterPages>
								<Page id="master" title="BET SLIP" enableScrolling="false" floatingFooter="true">
									<content>
										<List>
											<items>
